{
  "name": "kolaczyn-typescript-template",
  "license": "MIT",
  "author": "Paweł Kołaczyński",
  "repository": "github:kolaczyn/typescript-template",
  "version": "0.0.0",
  "scripts": {
    "dev": "ts-node-dev --ignore-watch jmdict-eng-common-3.5.0.json src/server.ts",
    "dev:run": "ts-node src/server.ts",
    "start": "node dist/server.js",
    "format": "prettier -c src",
    "types": "tsc --noEmit",
    "lint:check": "eslint src",
    "test:run": "vitest run",
    "ci": "run-p -l --aggregate-output format lint:check types test:run",
    "build": "rimraf dist && tsc",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.10.0",
    "@swc/core": "^1.3.37",
    "@types/cors": "^2.8.17",
    "@types/dotenv-safe": "^8.1.6",
    "@types/express": "^4.17.21",
    "@types/node": "^18.11.18",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.4.0",
    "@typescript-eslint/parser": "^8.4.0",
    "eslint": "^9.10.0",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "rimraf": "^4.1.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "4.9.5",
    "vite": "^4.5.3",
    "vitest": "^0.29.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "lib"
  ],
  "main": "./lib/cjs/index.js",
  "module": "./lib/umd/index.js",
  "types": "./lib/esm/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/esm/index.js",
      "require": "./lib/umd/index.js"
    }
  },
  "sideEffects": false,
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "eslint"
    ]
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv-safe": "^9.1.0",
    "express": "^4.19.2",
    "extract-zip": "^2.0.1",
    "supertest": "^7.0.0",
    "zod": "^3.23.8"
  }
}
